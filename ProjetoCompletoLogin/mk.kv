<LoginWindow>:
    name: "login"
    email: email
    password: password

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # fundo branco base
            Rectangle:
                pos: self.pos
                size: self.size
            Color:
                rgba: 0.2, 0.4, 0.8, 1  # azul escuro
            Rectangle:
                pos: self.pos
                size: self.size
                source: "assets/blue_gradient.png"  # imagem de fundo com degradê azul

        Image:
            source: "C:/Users/flavi/OneDrive/Desktop/ia/unnamed.png"  # boneco estilo MSN
            size_hint: None, None
            size: 120, 120
            pos_hint: {"center_x": 0.5, "top": 0.85}

        Label:
            text: "Bem-vindo ao login do Flávio"
            font_size: 28
            bold: True
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "top": 0.75}

        Label:
            text: "Email:"
            font_size: 20
            color: 1, 1, 1, 1
            pos_hint: {"x": 0.1, "top": 0.6}
            size_hint: 0.3, 0.1

        TextInput:
            id: email
            multiline: False
            size_hint: 0.6, 0.1
            pos_hint: {"x": 0.3, "top": 0.6}
            background_color: 1, 1, 1, 0.9
            foreground_color: 0, 0, 0, 1
            font_size: 18
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

        Label:
            text: "Senha:"
            font_size: 20
            color: 1, 1, 1, 1
            pos_hint: {"x": 0.1, "top": 0.45}
            size_hint: 0.3, 0.1

        TextInput:
            id: password
            multiline: False
            password: True
            size_hint: 0.6, 0.1
            pos_hint: {"x": 0.3, "top": 0.45}
            background_color: 1, 1, 1, 0.9
            foreground_color: 0, 0, 0, 1
            font_size: 18
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.9
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10]

        Button:
            text: "Entrar"
            size_hint: 0.5, 0.12
            pos_hint: {"center_x": 0.5, "y": 0.2}
            background_color: 1, 0.85, 0.2, 1
            color: 0, 0, 0, 1
            font_size: 20
            canvas.before:
                Color:
                    rgba: 1, 0.85, 0.2, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            text: "Criar nova conta"
            size_hint: 0.5, 0.1
            pos_hint: {"center_x": 0.5, "y": 0.05}
            background_color: 1, 0.9, 0.4, 1
            color: 0.2, 0.2, 0.2, 1
            font_size: 16
            canvas.before:
                Color:
                    rgba: 1, 0.9, 0.4, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()
